@import "vendor/reveal"
@import "vendor/white"
@import "vendor/zenburn"

main = #2980b9

.white
	color white !important
.blue
	color #2980b9 !important
.green
	color #27ae60 !important
.red
	color #c0392b !important
.yellow
	color #f1c40f
.purple
    color #8e44ad !important
defs
	display block

.reveal
	img,video
		max-width 100%
	pre
		width 100%
		line-height 1.5em
		margin-top 50px
		font-size 0.5em
	.block
		display: table
		background: main
		padding 5px 15px
		color white
	.bigger
		font-size 4em
	.text-left
		text-align left
	.text-right
		text-align right
	.text-center
		text-align: center
		margin auto
	.top
		top 0 !important
	.bottom
		margin-top: 500px
	.middle
		margin-top: 100px
	.sec-slide
		h1,h2,h3,h4,.text
			color main
		hr
			border-color main
	.center
		text-align center
		display block
		margin auto
	.text
		font-size 1.1em
		line-height 1.5em
	.more
		font-size .8em
	ul
		margin-top 30px
		li
			font-size .9em
			line-height 2em
	.col-3
		display: inline-block
		width 22%
		text-align: center
		margin 90px 40px

.rounded
	border-radius 50%

.bold
	font-weight 800 !important
